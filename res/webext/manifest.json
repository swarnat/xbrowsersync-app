{
  "manifest_version": 3,
  "name": "__MSG_App_Title_Default__",
  "description": "__MSG_App_Description_Default__",
  "icons": {
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "default_locale": "en",
  "action": {
    "default_icon": {
      "32": "assets/notsynced.png"
    },
    "default_popup": "app.html",
    "default_title": "__MSG_App_Title_Default__"
  },
  "background": {
    "service_worker": "assets/service-worker.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "MacCtrl+Space"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *; font-src 'self' data:; img-src 'self' data:; style-src 'self' 'unsafe-inline';"
  },
  "permissions": [
    "activeTab",
    "alarms",
    "bookmarks",
    "downloads",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "host_permissions": ["http://*/*", "https://*/*"],
  "incognito": "not_allowed"
}
